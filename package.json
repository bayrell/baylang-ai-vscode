{
	"name": "baylang-ai",
	"type": "module",
	"displayName": "BayLang AI",
	"description": "BayLang AI. Chat bot",
	"publisher": "BAYRELL",
	"version": "1.1.1",
	"main": "dist/index.cjs",
	"author": "Ildar Bikmamatov <ildar@bayrell.org>",
	"license": "Apache-2.0",
	"homepage": "https://github.com/bayrell",
	"extensionUri": "https://github.com/bayrell/baylang-ai-vscode",
	"repository": {
		"type": "git",
		"url": "https://github.com/bayrell/baylang-ai-vscode"
	},
	"keywords": [
		"ai",
		"artificial intelligence",
		"assistant",
		"bay lang",
		"baylang",
		"chat",
		"chatbot",
		"code assistant",
		"code generation",
		"developer tools",
		"explanation",
		"gemini",
		"grok",
		"ollama",
		"openai",
		"programming",
		"refactoring"
	],
	"scripts": {
		"vsce": "./node_modules/.bin/vsce",
		"test": "./node_modules/.bin/jasmine --random=false --config=./jasmine.js",
		"build": "NODE_ENV=production ./node_modules/.bin/rollup --config rollup.config.js --bundleConfigAsCjs",
		"watch": "NODE_ENV=development ./node_modules/.bin/rollup --config rollup.config.js --bundleConfigAsCjs --watch",
		"build_plugin": "./node_modules/.bin/vsce package",
		"install_plugin": "install_vsix baylang-ai 1.0.0 ./baylang-ai-1.0.0.vsix"
	},
	"dependencies": {
		"@rollup/plugin-alias": "^5.1.1",
		"@rollup/plugin-commonjs": "^28.0.6",
		"@rollup/plugin-node-resolve": "^16.0.1",
		"@rollup/plugin-replace": "^6.0.2",
		"@rollup/plugin-terser": "^0.4.4",
		"@vitejs/plugin-vue": "^6.0.0",
		"@vscode/vsce": "^3.4.0",
		"dompurify": "^3.2.6",
		"highlight.js": "^11.11.1",
		"jasmine": "^5.9.0",
		"markdown-it": "^14.1.0",
		"minimatch": "^10.0.3",
		"rollup": "^4.44.2",
		"rollup-plugin-scss": "^4.0.1",
		"sass": "^1.89.2",
		"vue": "^3.5.17",
		"ws": "^8.18.3"
	},
	"activationEvents": [
		"onStartupFinished"
	],
	"engines": {
		"vscode": "^1.98.0"
	},
	"categories": [
		"Programming Languages"
	],
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "baylang-ai-container",
					"title": "BayLang AI",
					"icon": "baylang.png"
				}
			]
		},
		"views": {
			"baylang-ai-container": [
				{
					"type": "webview",
					"id": "baylang-ai-view",
					"name": "BayLang AI"
				}
			]
		},
		"commands": [
			{
				"command": "baylang-ai.showChat",
				"title": "BayLang AI: Show chat",
				"icon": "$(comment-discussion)"
			},
			{
				"command": "baylang-ai.showSettings",
				"title": "BayLang AI: Show settings",
				"icon": "$(gear)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "baylang-ai.showChat",
					"when": "view == baylang-ai-view",
					"group": "navigation"
				},
				{
					"command": "baylang-ai.showSettings",
					"when": "view == baylang-ai-view",
					"group": "navigation"
				}
			]
		}
	}
}
